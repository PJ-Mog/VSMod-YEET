{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Client (.NET) [1.18]",
      "type": "clr",
      "request": "launch",
      "preLaunchTask": "Build (Debug)",
      "program": "${env:VINTAGE_STORY_DEV}/1.18/Vintagestory.exe",
      "args": [
        "--playStyle" , "preset-surviveandbuild",
        "--openWorld" , "modding test world ${TargetGameVersion} ${workspaceFolderBasename}",
        "--dataPath", "${env:VINTAGE_STORY_DEV}/../VintagestoryDevDataUS",
        "--addModPath", "${workspaceFolder}/bin/Debug/zip"
      ],
      "env": {
        "TEXTURE_DEBUG_DISPOSE": "1",
        "VAO_DEBUG_DISPOSE": "1"
      },
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart"
    },
